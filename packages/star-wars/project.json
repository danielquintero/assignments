{
  "name": "star-wars",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "packages/star-wars/src",
  "prefix": "challenges",
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:browser",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/star-wars",
        "index": "packages/star-wars/src/index.html",
        "main": "packages/star-wars/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "packages/star-wars/tsconfig.app.json",
        "inlineStyleLanguage": "sass",
        "assets": [
          "packages/star-wars/src/favicon.ico",
          "packages/star-wars/src/assets"
        ],
        "styles": ["packages/star-wars/src/styles.sass"],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "2kb",
              "maximumError": "4kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "browserTarget": "star-wars:build:production"
        },
        "development": {
          "browserTarget": "star-wars:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "browserTarget": "star-wars:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/star-wars/**/*.ts",
          "packages/star-wars/**/*.html"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/star-wars/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
